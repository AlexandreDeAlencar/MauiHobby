<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GA_Intergado.CR2.MAUI.Pages.LoadingPage"
             xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             Title="{loc:Translate LoadingHeader}">
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <ActivityIndicator Color="{StaticResource Primary}"
                               IsRunning="True" HeightRequest="50" WidthRequest="50"
                               IsVisible="True" />
        <Label Text="{loc:Translate Loader}" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>